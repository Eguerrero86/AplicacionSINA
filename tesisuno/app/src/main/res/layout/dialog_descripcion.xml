<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="600dp"
    android:background="@drawable/ly_borde"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        //IMAGEN OFERTA
        //PRODUCTOR

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imagenDialog"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="15"
                app:civ_shadow_color="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nombreDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miguel Andres Rocha"
                    android:textSize="20sp"
                    android:textColor="@color/negro"
                    />
                <TextView
                    android:id="@+id/ciudadDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Santander"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
    //PRODUCTO
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto: "
                    android:textColor="@color/negro"/>
                <TextView
                    android:id="@+id/productoDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Este es el producto"/>
            </LinearLayout>
    //CANTIDAD
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad: "
                    android:textColor="@color/negro"/>
                <TextView
                    android:id="@+id/cantidadDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 Toneladas"/>
                <TextView
                    android:id="@+id/unidadDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text=""/>
            </LinearLayout>
    //DIRECCIÓN
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección: "
                    android:textColor="@color/negro"/>
                <TextView
                    android:id="@+id/direccionDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esta es la dirección con indicaciones"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_rdn_blanco"
                android:text="Ver Ubicación En el Mapa  "
                android:drawableLeft="@drawable/ic_ubicacion"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ly_borde">
                <TextView
                    android:id="@+id/descripcionDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Esta es la descripción del producto que puee ser larga o corta ependieno del productor
Esta es la descripción del producto que puee ser larga o corta ependieno del productor
Esta es la descripción del producto que puee ser larga o corta ependieno del productor
Esta es la descripción del producto que puee ser larga o corta ependieno del productor
Esta es la descripción del producto que puee ser larga o corta ependieno del productor" />
            </ScrollView>
        </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estoy Interesado"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/boton_rdn_verde"/>
            <Button
                android:id="@+id/enviarMensajeDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar un mesaje"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boton_rdn_amarillo"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>